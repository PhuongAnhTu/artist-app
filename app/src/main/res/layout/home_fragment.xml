<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:weightSum="2"
            tools:context=".login.LoginModel">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/shadow"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:gravity="left"
                        android:textSize="20sp"
                        android:text="@string/artist"
                        android:textColor="@color/purple_500"
                        android:textStyle="bold"
                        android:layout_alignBaseline="@+id/show_detail_art"/>
                    <ImageView
                        android:id="@+id/show_detail_art"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="7dp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/ic_double_arrow_24"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/artistRecyclerView"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:scrollbars="vertical"
                    android:nestedScrollingEnabled="true">
                </androidx.recyclerview.widget.RecyclerView>

                <ProgressBar
                    android:id="@+id/loading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    style="?android:attr/progressBarStyle"
                    android:visibility="gone"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/shadow"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:gravity="left"
                        android:textSize="20sp"
                        android:text="@string/album"
                        android:textColor="@color/purple_500"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/show_detail_alb"
                        android:padding="7dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/ic_double_arrow_24"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/albumRecyclerView"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:scrollbars="vertical"
                    android:nestedScrollingEnabled="true">
                </androidx.recyclerview.widget.RecyclerView>

                <ProgressBar
                    android:id="@+id/loading2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    style="?android:attr/progressBarStyle"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
</layout>